<?php

/**
 * This array define the Database(s).
 * If you don't use any database set to null.
 * By default this return null.
 */

{% if db is defined %}
return array(
	'driver' => '{{ db.driver }}',
	'dbName' => '{{ db.dbName }}',
	'host' => '{{ db.host }}',
	'port' => '{{ db.port }}',
	'user' => '{{ db.user }}',
	'password' => '{{ db.password }}',
);
{% else %}
return null;
{% endif %}